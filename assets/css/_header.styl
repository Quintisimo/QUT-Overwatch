header
  fixed(top 0)
  display: flex
  justify-content: space-between
  align-items: center
  background-color: $accent-light
  size(100% 8rem)
  z-index: 1

  #mobile-nav-toggle
    display: none

  img
    size(12rem 7rem)
    padding: 10px

  nav
    text-align: right

    a
      color: inherit
      text-decoration: none
      font-size: 2rem
      padding: 0 20px

      &:hover
        color: $accent-dark

  @media (max-width: 800px)
    #mobile-nav-toggle
      font-size: 3rem
      display: block
      margin-left: 20px

    nav
      display: none

.mobile-nav
  fixed(top 0 left 0)
  size(60% 100%)
  background: $accent-dark
  transform: translateX(-100%)
  transition: all 0.5s ease-in-out
  z-index: 2

  #mobile-nav-dismiss
    font-size: 3rem
    text-align: left
    margin: 20px 20px 0

  .link
    display: block
    font-size: 3rem
    text-align: center
    margin: 80px 0

    i
      margin-right: 20px

    a
      color: inherit
      text-decoration: none

.is-visible
  transform: translateX(0)
